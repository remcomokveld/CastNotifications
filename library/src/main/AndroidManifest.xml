<manifest package="nl.rmokveld.castnotifications"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >

        <service
            android:name="nl.rmokveld.castnotifications.DiscoveryService"
            android:exported="false"/>

        <service
            android:name="nl.rmokveld.castnotifications.StartCastService"
            android:exported="false"/>

        <receiver android:name="nl.rmokveld.castnotifications.ScreenStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_OFF"/>
                <action android:name="android.intent.action.SCREEN_ON"/>
            </intent-filter>
        </receiver>

        <receiver android:name="nl.rmokveld.castnotifications.WifiStateReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.STATE_CHANGE"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name="nl.rmokveld.castnotifications.NotificationDeletedReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.action.NOTIFICATION_DELETED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
